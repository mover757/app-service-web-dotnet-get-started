@{
    ViewBag.Title = "Contact Us";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <p class="lead">Get in touch with us for inquiries, support, or partnership opportunities.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Contact Information</h3>
            <address>
                <strong>Course Search Platform</strong><br />
                123 Learning Street<br />
                Online Education Hub, 56789<br />
                <abbr title="Phone">P:</abbr> (555) 123-4567
            </address>
        </div>
        <div class="col-md-6">
            <h3>Support & Partnerships</h3>
            <p>Have questions or need help? Reach out to us.</p>
            <address>
                <strong>Support:</strong> <a href="mailto:support@coursesearch.com">support@coursesearch.com</a><br />
                <strong>Partnerships:</strong> <a href="mailto:partnerships@coursesearch.com">partnerships@coursesearch.com</a>
            </address>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <h3>Send Us a Message</h3>
            <form method="post" action="/Contact/Submit">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="message" placeholder="Your Message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>
